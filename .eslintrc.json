{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "import/no-unresolved": [2],
    "semi": 1,
    "no-console": 0
  },
  "globals": {
    "phaser": true
  },
  "settings": {
    "semi": ["always"],
    "import/resolver": "webpack",
    "import/core-modules": [ "phaser", "pixi", "p2" ]
  }
}
